model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Wallet {
  id      Int    @id @default(autoincrement())
  fid     String
  shop    String
  address String
}